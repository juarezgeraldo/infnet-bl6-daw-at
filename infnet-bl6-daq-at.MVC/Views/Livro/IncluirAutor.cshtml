@model infnet_bl6_daw_at.MVC.Models.Livros.IncluiAutorViewModel

@{
    ViewData["Title"] = "Incluir Autor";
}

<h1>Incluir Autor</h1>

<h3>Você tem certeza de que quer incluir Autor no Livro?</h3>
<div>
    <h1>Livro</h1>

    <div>
        <h4>Livro</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                Titulo
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Livro.Titulo
            </dd>
            <dt class = "col-sm-2">
                ISBN
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Livro.Isbn
            </dd>
            <dt class = "col-sm-2">
                Year
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Livro.Ano
            </dd>
        </dl>
    </div>

    <div>
        <h4>Autor</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                Nome
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Autor.Nome
            </dd>
            <dt class = "col-sm-2">
                Last Sobrenome
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Autor.Sobrenome
            </dd>
            <dt class = "col-sm-2">
                Email
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Autor.Email
            </dd>
            <dt class = "col-sm-2">
                Birth Date
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Autor.Nascimento
            </dd>
        </dl>
    </div>
    
    <form asp-action="IncluirAutor">
        @Html.HiddenFor(m => m.AutorId)
        @Html.HiddenFor(m => m.LivroId)
        <input type="submit" value="Add" class="btn btn-success"/> |
        <a asp-action="Editar">Voltar a lista</a>
    </form>
</div>
